<div class="card mb-3">
  <h2 class="card-header h4">
    Bookmark #<%= bookmark.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Bookmarker</dt>
      <dd>
        <% if @bookmark.bookmarker.present? %>
          <%= link_to bookmark.bookmarker, bookmark.bookmarker %>
        <% end %>
      </dd>

      <dt>Status</dt>
      <dd><%= bookmark.status %></dd>

      <dt>Movie</dt>
      <dd>
        <% if @bookmark.movie.present? %>
          <%= link_to bookmark.movie, bookmark.movie %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back bookmark, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.bookmarker %>
          <%= link_to edit_bookmark_url(bookmark), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.bookmarker %>
          <%= link_to bookmark, method: :delete, data: { confirm: "Do you really want to delete this bookmark?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(bookmark.updated_at) %> ago
  </div>
</div>
